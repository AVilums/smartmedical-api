# Security
API_KEY=test-api-key-12345
BIND_HOST=127.0.0.1
PORT=8080
RATE_LIMIT_PER_MIN=30
RATE_LIMIT_BURST=60
ALLOWED_ORIGINS=["*"]

# Timeouts (seconds)
REQUEST_TIMEOUT=60
SELENIUM_PAGELOAD_TIMEOUT=30
