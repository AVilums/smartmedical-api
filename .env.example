# Environment configuration for SmartMedical Automation Service
# Copy this file to .env and adjust values

# Security
API_KEY=change-me-strong-secret
BIND_HOST=127.0.0.1
PORT=8080
RATE_LIMIT_PER_MIN=30
RATE_LIMIT_BURST=60
ALLOWED_ORIGINS=*

# Timeouts (seconds)
REQUEST_TIMEOUT=60
SELENIUM_PAGELOAD_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=5

# Selenium / Browser
BROWSER=headless-chrome
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
